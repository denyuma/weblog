<!doctype html>
<html lang="ja">

<head>
  <title>新規記事登録</title>
  <%- include('../../_share/stylesheets.ejs') %>
</head>

<body>
  <%- include('../../_share/navbar.ejs') %>

    <main role="main" class="container">

      <div class="border-bottom mt-5 mb-5">
        <h1>新規記事登録</h1>
      </div>

      <form>
        <%
          var errors = locals.errors || {};
          var original = locals.original || {};
        %>
        <% if (locals.errors) {%>
          <div class="alert alert-danger" >
          <% for(var key in errors) { %>
            <div><i class="fa fa-exclamation-circle fa-fw mr-2"></i> <%= errors[key] %> </div>
          <% } %>
          </div>
        <% } %>
        <div class="form-group row">
          <label for="url" class="col-sm-2 col-form-label ">URL:</label>
          <div class="col-sm-10">
            <input type="text"   class="form-control <%= errors.url ? 'is-invalid' : '' %> " name="url" id="url" value="<%= original.url %>" >
          </div>
        </div>
        <div class="form-group row">
          <label for="title" class="col-sm-2 col-form-label ">タイトル</label>
          <div class="col-sm-10">
            <input type="text"   class="form-control <%= errors.title ? 'is-invalid' : '' %> " name="title" id="title" value="<%= original.title %>">
          </div>
        </div>
        <div class="form-group row">
          <label for="content" class="col-sm-2 col-form-label ">本文:</label>
          <div class="col-sm-10">
            <textarea type="text"   class="form-control  " name="content" id="content" rows="6" value="<%= original.content %>" > </textarea>
          </div>
        </div>
        <div class="form-group row">
          <label for="keywords" class="col-sm-2 col-form-label ">キーワード:</label>
          <div class="col-sm-10">
            <input type="text"   class="form-control  " name="keywords" id="keywords" value="<%= original.keywords %>" >
          </div>
        </div>
        <div class="form-group row">
          <label for="authors" class="col-sm-2 col-form-label ">著者</label>
          <div class="col-sm-10">
            <input type="text"   class="form-control  " name="authors" id="authors" value="<%= original.authors %>" >
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" data-method="POST" data-action="/account/posts/regist/confirm"  value="確認">
          </div>
        </div>
      </form>


    </main>

    <%- include('../../_share/javascripts.ejs') %>
    <script src="/public/javascripts/account/posts/regist.js"></script>
</body>

</html>